{
  "name": "speaktoearn-agent",
  "version": "1.0.0",
  "description": "A decentralized application that rewards users for completing speaking tasks with AI evaluation and blockchain-based payments on the Celo network.",
  "private": true,
  "author": "TheAlexYao",
  "license": "MIT",
  "scripts": {
    "frontend:dev": "yarn workspace @speaktoearn/frontend dev",
    "frontend:build": "yarn workspace @speaktoearn/frontend build",
    "frontend:start": "yarn workspace @speaktoearn/frontend start",
    "frontend:lint": "yarn workspace @speaktoearn/frontend lint",
    "backend:dev": "yarn workspace @speaktoearn/backend dev",
    "backend:build": "yarn workspace @speaktoearn/backend build",
    "backend:start": "yarn workspace @speaktoearn/backend start",
    "contracts:compile": "yarn workspace @speaktoearn/contracts compile",
    "contracts:deploy:alfajores": "yarn workspace @speaktoearn/contracts deploy:alfajores",
    "contracts:test": "yarn workspace @speaktoearn/contracts test",
    "dev": "yarn workspaces foreach -pi run dev",
    "build": "yarn workspaces foreach -pi run build",
    "test": "yarn workspaces foreach -pi run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "celo",
    "blockchain",
    "ai",
    "speech",
    "smart-contracts"
  ]
}
